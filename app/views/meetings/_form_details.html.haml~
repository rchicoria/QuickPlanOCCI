:javascript

$(function() {
  $('.last').live('click keyup',function(e) {
    if ($(this).val() != "") {
      $(this).attr('class','inputlist');
      $(this).next('span').show();
      console.log($(this).parent().parent().parent().find('.hidden_button'));
      $(this).parent().parent().parent().find('.hidden_button').click();
      //$('.hidden_button').click();
    }
  });
});
